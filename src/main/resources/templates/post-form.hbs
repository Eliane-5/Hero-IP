{{#partial "content"}}
    <style>
        body{
            background-image:url("https://images8.alphacoders.com/888/thumb-1920-888328.jpg");
            background-repeat:no-repeat;
            background-size:cover;
        }
    </style>
    {{#if editHero}}
        <h1>Edit this Hero!</h1>
        <form action="/heroes/{{editHero.id}}/update" method="post">
            <label for="name">Edit this hero's content</label><br>
            <input id="name" name="name" type="text" value="{{editHero.name}}"><br>
            <label for="age">Hero Age</label><br>
            <input id="age" name="age" type="text" value="{{editHero.age}}"><br>
            <label for="power">Hero Power</label><br>
            <input id="power" name="power" type="text" value="{{editHero.power}}"><br>
            <label for="weakness">Hero Weakness</label><br>
            <input id="weakness" name="weakness" type="text" value="{{editHero.weakness}}"><br><br>
    {{else}}
         <h1>Add a new Hero!</h1>

         <form action="/heroes/new" method="post">
            <label for="name">Hero Name</label><br>
            <input id="name" name="name" type="text"><br>
            <label for="age">Hero Age</label><br>
            <input id="age" name="age" type="text"><br>
            <label for="power">Hero Power</label><br>
            <input id="power" name="power" type="text"><br>
            <label for="weakness">Hero Weakness</label><br>
            <input id="weakness" name="weakness" type="text"><br><br>
    {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
         </form>
{{/partial}}

{{> layout.hbs}}