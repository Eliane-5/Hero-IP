{{#partial "content"}}
    {{#if editHero}}
         <h1>Edit this Hero!</h1>
         <form action="/heroes/{{editHero.id}}/update" method="post">
             <label for="content">Edit this hero's content</label>
             <input id="content" name="content" type="text" value="{{editHero.content}}">

       {{else}}
         <h1>Add a new Hero!</h1>

         <form action="/heroes/new" method="post">
           <label for="content">Hero Content</label>
           <input id="content" name="content" type="text">

       {{/if}}
           <button type="submit" class="btn btn-default">Go!</button>
         </form>
{{/partial}}

{{> layout.hbs}}