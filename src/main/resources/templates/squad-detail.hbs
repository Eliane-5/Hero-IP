{{#partial "content"}}
<style>
body{
background-image:url("https://www.barraques.cat/pngfile/big/47-473962_related-wallpapers-marvels-agents-of-shield-season-1.jpg");
background-repeat:no-repeat;
background-size:cover;
}
</style>
   <h2>SQUAD:</h2>

   <h5>{{ squad.squadName }}</h5>
   <h5>{{ squad.maxSize }}</h5>
   <h5>{{ squad.cause }}</h5>

   <h3>Created At:</h3>
   <h5> {{ squad.createdAt }}</h5>
   <h3>Squad status:</h3>
   <h5>
       {{#if squad.published }}
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
       {{else}}
           <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
       {{/if}}

       <a href="/squads/{{squad.id}}/update">Edit this Squad</a><br>
       <a href="/squads/{{squad.id}}/delete">DELETE this Squad (no undo)</a>
   </h5>

{{/partial}}

