{{#partial "content"}}
<style>
body{
background-image:url("https://images8.alphacoders.com/888/thumb-1920-888328.jpg");
background-repeat:no-repeat;
background-size:cover;
}
</style>
   <h2>HERO:</h2>

   <h5>{{ hero.name }}</h5>
   <h5>{{ hero.age }}</h5>
   <h5>{{ hero.power }}</h5>
   <h5>{{ hero.weakness }}</h5>

   <h3>Created At:</h3>
   <h5> {{ hero.createdAt }}</h5>
   <h3>Hero status:</h3>
   <h5>
       {{#if hero.published }}
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
       {{else}}
           <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
       {{/if}}

       <a href="/heroes/{{hero.id}}/update">Edit this Hero</a><br>
       <a href="/heroes/{{hero.id}}/delete">DELETE this Hero (no undo)</a>
   </h5>

{{/partial}}

{{> layout.hbs}}
