{{#partial "content"}}

   <p>Content:</p>

   <p>{{ hero.name }}</p>
   <p>{{ hero.age }}</p>
   <p>{{ hero.power }}</p>
   <p>{{ hero.weakness }}</p>

   <h5>Created At:</h5>
   <p> {{ hero.createdAt }}</p>
   <h5>Hero status:</h5>
   <p>
       {{#if hero.published }}
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
       {{else}}
           <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
       {{/if}}

       <a href="/heroes/{{hero.id}}/update">Edit this Hero</a><br>
       <a href="/heroes/{{hero.id}}/delete">DELETE this Hero (no undo)</a>
   </p>

{{/partial}}

{{> layout.hbs}}
